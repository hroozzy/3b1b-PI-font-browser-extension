{
  "manifest_version": 3,
  "name": "3b1b PI",
  "version": "1.1",
  "description": "turn all 'π' into 3b1b's happy π",

  
  "permissions": [
    "storage" 
  ],

  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["images/happy.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}